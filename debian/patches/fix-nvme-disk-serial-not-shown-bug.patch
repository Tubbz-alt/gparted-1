--- gparted-0.32.0.7.orig/src/GParted_Core.cc
+++ gparted-0.32.0.7/src/GParted_Core.cc
@@ -1011,6 +1011,29 @@ void GParted_Core::set_device_serial_num
 			device.serial_number = serial_number;
 	}
 	// Otherwise serial number left blank when not found in the hdparm output.
+
+	if(device.serial_number == "none")
+	{
+		Utils::execute_command( "nvme id-ctrl " + Glib::shell_quote( device.get_path() ), output, error, true );
+		if ( ! error.empty() )
+		{
+			// uos@uos-PC:~$ sudo nvme id-ctrl /dev/nvme0n1
+			// NVME Identify Controller:
+			// vid       : 0x1987
+			// ssvid     : 0x1987
+			// sn        : 8E460792140045001705
+			// mn        : 128GB NVMe SSD                          
+			// fr        : AP120PG0
+			device.serial_number = "none";
+		}
+		else
+		{
+			Glib::ustring serial_number = Utils::trim( Utils::regexp_label( output,
+					"^sn[[:blank:]]*:[[:blank:]]*(.*)[[:blank:]]*$" ) );
+			if ( ! serial_number.empty() )
+				device.serial_number = serial_number;
+		}
+	}
